  <div>
    <h1>Konfigurering</h1>
  </div>
  <div>
    <h3>Aktiv søknadsrunde er {{ gjeldenderunde.soknadsrunde_navn  == '' ? 'ikke satt' : gjeldenderunde.soknadsrunde_navn  }}</h3>
  </div>
  <form method="POST" action="?page=UKMstimuleringsadmin_konfigurering">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <div>
            <label for="skjemaid">Velg søknadsrunde</label>
          </div>
          <select id="rundevalg"  name="skjemaid" class="form-select form-select-lg w-auto">
            {% for skjema in skjemaer %}
                <option value="{{ skjema.id }}" {{ skjema.id == gjeldenderunde.soknadsrunde_id ? 'selected' : ''}}>{{ skjema.title }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" {{ gjeldenderunde.visfylke == 'on' ? 'checked' : ''}} name="visfylke" id="visfylke">
          <label class="form-check-label" for="visfylke"><b>Skal fylkene kunne sende inn kommentarer?</b></label>
        </div>
        <input type="submit" class="btn btn-success" value="Lagre" id="submit">
      </div>
    </div>
  </form>

	
